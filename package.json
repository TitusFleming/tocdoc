{
  "name": "tocdoc",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && prisma migrate deploy && next build",
    "start": "next start",
    "lint": "next lint",
    "seed": "npx tsx prisma/seed.ts",
    "db:migrate": "npx prisma migrate dev",
    "db:reset": "npx prisma migrate reset --force && npm run seed",
    "db:studio": "npx prisma studio",
    "setup": "npm install && npx prisma generate && npx prisma migrate dev && npm run seed",
    "quick-start": "echo 'Starting TOCdoc setup...' && npm run setup && echo 'Setup complete! Run: npm run dev'",
    "verify": "node scripts/verify-setup.js"
  },
