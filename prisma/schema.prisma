// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  role      Role
  createdAt DateTime @default(now())
  events    Event[]  @relation("UserEvents")
}

model Event {
  id            String      @id @default(cuid())
  doctorId      String
  patientAlias  String
  dobMonthYear  String?     // MMYYYY format (optional)
  diagnosis     String
  hospitalName  String
  
  // Patient-centric workflow fields
  status        EventStatus @default(ADMITTED)
  admissionDate DateTime
  dischargeDate DateTime?
  
  // Existing fields
  reviewed      Boolean     @default(false)
  createdAt     DateTime    @default(now())
  doctor        User        @relation("UserEvents", fields: [doctorId], references: [id])

  @@index([doctorId])
  @@index([patientAlias, status])
  @@index([status])
}

enum Role {
  ADMIN
  DOCTOR
}

enum EventStatus {
  ADMITTED
  DISCHARGED
}
